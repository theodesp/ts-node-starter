{
  "moduleFileExtensions": [ "ts", "js", "ts", "tsx", "json" ],
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "testMatch": [
    "**/tests/**/*.ts"
  ],
  "rootDir": "./../",
  "collectCoverage": true,
  "collectCoverageFrom": [ "src/**/*.ts" ],
  "coverageReporters": ["html", "json"],
  "reporters": ["default"]
}
