{
  "moduleFileExtensions": [ "ts", "js", "ts", "tsx", "json" ],
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "setupTestFrameworkScriptFile": "./tests/setup.ts",
  "testMatch": [
    "**/tests/**/*test.ts",
    "**/*.spec.ts"
  ],
  "verbose": true,
  "rootDir": "./../"
}
