{
  "moduleFileExtensions": [ "ts", "js", "ts", "tsx", "json" ],
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "setupTestFrameworkScriptFile": "./tests/setup.ts",
  "testMatch": [
    "**/tests/**/*.ts",
    "**/*.spec.ts"
  ],
  "verbose": true,
  "rootDir": "./../",
  "collectCoverage": true,
  "collectCoverageFrom": [ "src/**/*.ts" ],
  "coverageReporters": ["json", "text", "lcov", "html"]
}
