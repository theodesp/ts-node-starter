{
  "name": "ts-node-starter",
  "version": "1.0.0",
  "description": "Opinionated Typescript Node Starter",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "npm run build -- --watch",
    "clean": "npm run clean:build && npm run clean:coverage",
    "clean:build": "rimraf dist/",
    "clean:coverage": "rimraf coverage/",
    "coverage": "jest --config jest/jest-coverage.config.json",
    "coverage:open": "npm run coverage && opn ./coverage/index.html",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "copy-static-assets": "ts-node copyAssets.ts",
    "install:ci": "npm ci",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "node dist/server.js",
    "start:watch": "nodemon dist/server.js --log",
    "test": "jest --config jest/jest.config.json",
    "test:ci": "jest --ci --config jest/jest-ci.config.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theodesp/ts-node-starter"
  },
  "keywords": [
    "NodeJS",
    "TypeScript",
    "boilerplate",
    "skeleton",
    "starter-kit"
  ],
  "author": "Theo Despoudis",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.12",
    "@types/node": "^11.13.8",
    "@types/node-notifier": "^5.4.0",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "dotenv": "^7.0.0",
    "jest": "^24.7.1",
    "node-notifier": "^5.4.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "winston": "^3.2.1"
  },
  "engines": {
    "node": ">=10"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@marblejs/core": "^2.1.0",
    "@marblejs/middleware-body": "^2.1.0",
    "@marblejs/middleware-cors": "^2.1.0",
    "@marblejs/middleware-io": "^2.1.0",
    "@marblejs/middleware-jwt": "^2.1.0",
    "@marblejs/middleware-logger": "^2.1.0",
    "compression": "^1.7.4",
    "errorhandler": "^1.5.0",
    "rxjs": "^6.5.1"
  }
}
